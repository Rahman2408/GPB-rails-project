<h1> New Project </h1>

 <%# render "add_partners" %>
  <br>
<%= form_for @project, url: projects_path(@project) , html: {method: :post}  do |f| %>
<%# render partial: "layouts/errors", locals: {subject: @project} %>
  <%= f.label :title, "Project Title:" %>
  <%= f.text_field :title %><br>
  <%= f.label :goal, "Main Goal:" %>
  <%= f.text_field :goal %><br><br>
  <h4>Features:<h4>
  <p> (Name a feature this project will have. More can be added later!)</p>
  <%= f.fields_for :project_features, @project.project_features.build do |project_features| %>
    <%= render partial: "project_features/feature_form", locals: {f: project_features} %>
    <% end %>
<br>
 
  <%= f.submit "Create Project" %>
  <% end %>